<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

   <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/wallpaper2"

    tools:context=".Ngo_AboutMe">

    <TextView
        android:id="@+id/About_NgoName"
        android:layout_width="290dp"
        android:layout_height="39dp"
        android:background="#40D3C5"
        android:fontFamily="@font/roboto_slab_bold"
        android:text="Name"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/About_NgoInputName"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_input"
        android:hapticFeedbackEnabled="false"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/About_NgoName" />

    <TextView
        android:id="@+id/About_NgoAddress"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="#40D3C5"
        android:fontFamily="@font/roboto_slab_bold"
        android:text="Address"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/About_NgoBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#40D3C5"
        android:fontFamily="@font/roboto_slab_bold"
        android:text="Bio"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_address" />

    <TextView
        android:id="@+id/About_NgoAddressInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/custom_input"
        android:maxLines="3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/About_NgoAddress" />

    <TextView
        android:id="@+id/About_NgoAboutInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/custom_input"
        android:fontFamily="sans-serif"
        android:maxLines="6"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/About_NgoBio" />

    <TextView
        android:id="@+id/About_NgoContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#40D3C5"
        android:fontFamily="@font/roboto_slab_bold"
        android:text="Contact Info"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_about" />

    <TextView
        android:id="@+id/About_NgoPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:drawablePadding="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="Phone No."
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/About_NgoPhoneInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/About_NgoContact"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/About_NgoEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:drawablePadding="5sp"
        android:fontFamily="sans-serif-medium"
        android:text="E-mail"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/About_NgoEmailInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/About_NgoPhone"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/About_NgoPhoneInput"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_input"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/About_NgoPhone"
        app:layout_constraintTop_toBottomOf="@+id/About_NgoContact" />

    <TextView
        android:id="@+id/About_NgoEmailInput"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/custom_input"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/About_NgoPhoneInput"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/About_NgoPhoneInput"
        app:layout_constraintTop_toBottomOf="@+id/update_phone"
        app:layout_constraintVertical_bias="0.169" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profileimage" />

    <Button
        android:id="@+id/update_address"
        android:layout_width="120dp"
        android:layout_height="23dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background3"
        android:fontFamily="sans-serif-thin"
        android:inputType="textCapSentences"
        android:textAlignment="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Edit Address"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/About_NgoAddressInput" />

    <Button
        android:id="@+id/update_about"
        android:layout_width="120dp"
        android:layout_height="23dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background3"
        android:fontFamily="sans-serif-thin"
        android:inputType="textCapSentences"
        android:textAlignment="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Edit Bio"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/About_NgoAboutInput" />

    <Button
        android:id="@+id/update_phone"
        android:layout_width="120dp"
        android:layout_height="23dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background3"
        android:textAlignment="center"
        android:fontFamily="sans-serif-thin"
        android:inputType="textCapSentences"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Edit Phone No."
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/About_NgoPhoneInput"
        app:layout_constraintStart_toStartOf="@+id/About_NgoPhoneInput"
        app:layout_constraintTop_toBottomOf="@+id/About_NgoPhoneInput" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>